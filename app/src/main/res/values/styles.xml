<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_generic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/letters</item>
        <item name="android:linksClickable">false</item>
    </style>
    <style name="layout_generic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corners_hard</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingHorizontal">30dp</item>
    </style>
    <style name="secret_info_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="secret_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/third</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="secret_user" parent="secret_info">
        <item name="android:layout_weight">2</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="secret_date" parent="secret_info">
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textEnd</item>
    </style>
    <style name="secret_title" parent="text_generic">
        <item name="android:textColor">@color/second_alt</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>
    <style name="secret_content" parent="text_generic">
        <item name="android:textColor">@color/second_alt</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>